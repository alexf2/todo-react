{
  "name": "nodejs-base",
  "author": "Alexey Fedorov",
  "license": "ISC",
  "version": "1.0.0",
  "description": "NodeJs Todo server",
  "main": "./src/index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon -w src --exec \"ts-node --project tsconfig.json\" src/index.ts",
    "start:prod": "cross-env NODE_ENV=production nodemon -w src --exec \"ts-node --project tsconfig.json\" src/index.ts",
    "start:lint": "concurrently \"npm run part1_task1\" \"npm run lint:watch\"",
    "lint": "eslint --ext=js,ts ./src --quiet",
    "lint:watch": "watch \"npm run lint -- \" ./src -du --wait=0.2"
  },
  "repository": {
    "type": "git",
    "url": "todo-react"
  },
  "devDependencies": {
    "@types/convict": "6.0.1",
    "@types/express": "4.17.11",
    "@types/helmet": "4.0.0",
    "@types/moment": "2.13.0",
    "@types/node": "14.14.31",
    "@types/prettier": "2.2.2",
    "@types/uuid": "8.3.0",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "concurrently": "6.0.0",
    "cross-env": "7.0.3",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.5",
    "eslint-plugin-prettier": "3.3.1",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "prettier-eslint": "12.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.2",
    "watch": "1.0.2"
  },
  "dependencies": {
    "convict": "6.0.0",
    "convict-format-with-validator": "6.0.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "helmet": "4.6.0",
    "moment": "2.29.1",
    "nocache": "2.1.0",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.1"
  }
}
